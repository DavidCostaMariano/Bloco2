package org.generation.blogPessoal.model;

import static org.junit.jupiter.api.Assertions.assertTrue;

import java.util.Set;

import javax.validation.ConstraintViolation;
import javax.validation.Validation;
import javax.validation.Validator;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.context.SpringBootTest.WebEnvironment;

@SpringBootTest(webEnvironment = WebEnvironment.RANDOM_PORT)
public class ContatoModelTest {

	private Postagem postagem;
	
	@Autowired
	private final Validator validator = Validation.buildDefaultValidatorFactory().getValidator();
	
	@BeforeEach
	public void start() {
		postagem = new Postagem();
	}
	@Test
	void testValidaAtributo() {
		Set<ConstraintViolation<Postagem>>violacao = validator.validate(postagem);
		assertTrue(violacao.isEmpty());
		System.out.println(violacao.toString());
	}
	@Test
	void testValidaAtributoNulos() {
		Postagem postagemErro = new Postagem();
		Set<ConstraintViolation<Postagem>>violacao = validator.validate(postagemErro);
	}
}
